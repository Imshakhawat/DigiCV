@model ResumeTemplateCreateModel
@{
    ViewData["Title"] = "AddNewTemplate";
}

<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-4">
            <!-- general form elements -->
            <div class="card card-primary p-2">
                <div class="card-header">
                    <h3 class="card-title">Add New Template</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form role="form" method="post" asp-area="Admin" asp-controller="ResumeTemplate" asp-action="AddNewTemplate"
                      enctype="multipart/form-data" asp-antiforgery="true">
                    <div class="card-body">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="TemplateName"></label>
                            <input type="text" class="form-control" asp-for="TemplateName" placeholder="Enter title">
                            <span asp-validation-for="TemplateName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TemplatePicture" class="control-label"></label>
                            <div class="custom-file">
                                <input asp-for="TemplatePicture" class="custom-file-input" id="customFile" />
                                <label class="custom-file-label" for="customFile">Choose Template Picture</label>

                            </div>
                            <span asp-validation-for="TemplatePicture" class="text-danger"></span>
                        </div>

                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>

            </div>
            <!-- /.card -->

        </div>
        <!--/.col (left) -->
    </div>
    <!-- /.row -->
</div><!-- /.container-fluid -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}