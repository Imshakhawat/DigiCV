@model CoverLetterDataModel
@{
    ViewData["Title"] = "Index";
}

@section Styles{
    <style>
        body {
            background: #f7f7ff;
            margin-top: 150px;
        }

        .card {
            background-color: #fff;
            border: 1px solid transparent;
            border-radius: .25rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 2px 6px 0 rgba(218, 218, 253, 0.65), 0 2px 6px 0 rgba(206, 206, 238, 0.54);
        }

        .address-section {
            margin-top: 10px;
        }

        .content {
            margin-top: 20px;
        }

        .mkp__footer {
            display: flex;
            justify-content: space-between;
        }

        .mkp__card {
            display: flex;
        }

        #edit-section {
            margin-right: 10px;
        }
    </style>
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="container">
                <div class="card">
                    <header class="mkp__header">
                        <h1>Cover Letter</h1>
                    </header>

                    <main class="mkp__main">
                        <div class="container">
                            <div class="address-section">
                                <span>@Model.Email</span>
                            </div>

                            <div class="content mt-4">
                                <p class="mb-2">@Model.Date</p>
                                <p class="mb-2">@Model.HiringBody</p>
                                <p class="mb-2">@Model.CompanyAddress</p>
                                <p class="mb-2">@Model.Email</p>
                                <p class="mt-4">@Model.Heading</p>
                                <p>@Model.Body</p>
                                <p>@Model.Footer</p>
                            </div>
                        </div>
                    </main>

                    <footer class="mkp__footer">
                        <div class="mkp__card edit">
                            <button id="edit-section" class="btn btn-primary">Edit</button>
                        </div>
                        <div class="card-body">
                            <a asp-action="Create" asp-controller="CoverLetter" class="btn btn-success">Create New</a>
                        </div>
                    </footer>
                </div>
            </div>
        </div>
    </div>
</div>
