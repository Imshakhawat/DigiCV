@model CVBuilder.Web.Areas.Users.Models.CoverLetterCreateModel
@{
    ViewData["Title"] = "Create";
}

@section Styles {
    <style>
        body {
            background: #f7f7ff;
            margin-top: 150px;
        }

        .card {
            background-color: #fff;
            border: 1px solid transparent;
            border-radius: .25rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 2px 6px 0 rgba(218, 218, 253, 0.65), 0 2px 6px 0 rgba(206, 206, 238, 0.54);
        }

        .me-2 {
            margin-right: 0.5rem !important;
        }

        .card-body h6 {
            line-height: 2.5;
        }
    </style>
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="container">
                <form class="register-form" asp-action="Create" asp-antiforgery="true" asp-area="Users" asp-controller="CoverLetter" method="post">
                    <div class="form-group">
                        <label for="Heading">Heading:</label>
                        <input type="text" class="form-control" name="Heading" id="Heading">
                    </div>

                    <div class="form-group">
                        <label for="HiringBody">Hiring Body:</label>
                        <input type="text" class="form-control" name="HiringBody" id="HiringBody">
                    </div>

                    <div class="form-group">
                        <label for="CompanyAddress">Company Address:</label>
                        <input type="text" class="form-control" name="CompanyAddress" id="CompanyAddress">
                    </div>

                    <div class="form-group">
                        <label for="Email">Email:</label>
                        <input type="text" class="form-control" name="Email" id="Email">
                    </div>

                    <div class="form-group">
                        <label for="Body">Body:</label>
                        <textarea class="form-control" name="Body" id="Body" rows="5" cols="40"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="Footer">Footer:</label>
                        <textarea class="form-control" name="Footer" id="Footer" rows="5" cols="40"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary">Create Cover Letter</button>
                </form>
            </div>
        </div>
    </div>
</div>
